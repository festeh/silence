{
    "swagger": "2.0",
    "info": {
        "description": "AI-powered audio transcription service with ElevenLabs integration",
        "title": "Silence API",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "name": "API Support",
            "email": "support@silence.local"
        },
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        },
        "version": "1.0"
    },
    "host": "localhost:8090",
    "basePath": "/",
    "paths": {
        "/speak": {
            "post": {
                "description": "Accepts audio in multipart/form-data (WAV file) or application/json (PCM data) format and returns transcribed text using the configured transcription provider",
                "consumes": [
                    "multipart/form-data",
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Audio"
                ],
                "summary": "Transcribe audio",
                "parameters": [
                    {
                        "type": "file",
                        "description": "WAV audio file (multipart/form-data only, max 32MB)",
                        "name": "audio",
                        "in": "formData"
                    },
                    {
                        "type": "string",
                        "description": "ISO-639-1 or ISO-639-3 language code (multipart/form-data only). Use 'auto' or omit for auto-detection. Examples: 'en', 'es', 'fr'",
                        "name": "language_code",
                        "in": "formData"
                    },
                    {
                        "description": "PCM audio data with optional language_code (application/json only)",
                        "name": "body",
                        "in": "body",
                        "schema": {
                            "$ref": "#/definitions/handlers.AudioTranscriptionRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Transcription successful",
                        "schema": {
                            "$ref": "#/definitions/handlers.SuccessResponse"
                        }
                    },
                    "400": {
                        "description": "Bad request (invalid format, empty audio, etc.)",
                        "schema": {
                            "$ref": "#/definitions/handlers.ErrorResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "handlers.AudioTranscriptionRequest": {
            "type": "object",
            "properties": {
                "language_code": {
                    "description": "Optional ISO-639-1 or ISO-639-3 language code. Use \"auto\" or empty for auto-detection.",
                    "type": "string"
                },
                "pcm_data": {
                    "type": "array",
                    "items": {
                        "type": "integer"
                    }
                }
            }
        },
        "handlers.ErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "Invalid audio format"
                },
                "timestamp": {
                    "type": "integer",
                    "example": 1629840000
                }
            }
        },
        "handlers.SuccessResponse": {
            "type": "object",
            "properties": {
                "audio_length": {
                    "type": "integer",
                    "example": 15
                },
                "language_code": {
                    "type": "string",
                    "example": "en"
                },
                "text": {
                    "type": "string",
                    "example": "Hello world, this is a transcription"
                },
                "timestamp": {
                    "type": "integer",
                    "example": 1629840000
                }
            }
        }
    }
}